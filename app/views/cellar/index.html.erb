<body id="cellar">
  <div class="row" id="list">
    <div class="col-md-2 col-sm-4 col-xs-6">
      <div id="categories">
        <% @categories.each do |category| %>
          <div id="category">
            <div id="category-checkbox">
              <label>
                <input type="checkbox" value="<%= category.name %>" id="<%= category.name %>ID"/>
                <%= category.name %>
              </label>
            </div>
            <!-- <%= category.name %><br> -->
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-10">
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-3 col-sm-4 col-xs-6 col-xlg-2 search-item categories">
            <div class="thumbnail">
              <img src="http://starbounder.org/mediawiki/images/a/ab/Wine_Bottle.png" alt="...">
              <div class="caption">
                <h4><%= item.title %></h4>
                <p>
                  Description: <%= item.description %><br>
                  Style: <%= item.category %><br>
                  Region: <%= item.region %><br>
                  Price: <%= item.price %><br>
                </p>
                <p><a href="#" class="btn btn-primary add-to-wishlist" role="button">Add to Wishlist</a> <a href="#" class="btn btn-default drank-wine" role="button">Drank</a></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</body>
